<h1>New Video Project</h1>

<%= form_with model: @project, url: new_payment_path, method: :get, local: true do |f| %>
  <div>
    <%= label_tag :name, "Project Name" %><br>
    <%= text_field_tag "project[title]" %>
  </div>

  <div style="margin-top: 10px;">
    <%= label_tag :footage_url, "Link to Raw Footage" %><br>
    <%= text_field_tag "project[raw_footage_url]" %>
  </div>

  <h3 style="margin-top: 20px;">Select Video Types</h3>
  <div style="display: flex; flex-wrap: wrap; gap: 16px;">
    <% @video_types.each do |video| %>
      <div style="border: 1px solid #ccc; padding: 12px; width: 250px;">
        <h4><%= video.name %></h4>
        <p>Format: <%= video.format %></p><br>
        <p>Price: <strong>$<%= video.price %></strong></p>
        <label>
          <%= check_box_tag "project[video_type_ids][]", video.id %> Add this video
        </label>
      </div>
    <% end %>
  </div>

  <div style="margin-top: 20px;">
    <%= submit_tag "Continue to Payment" %>
  </div>
<% end %>

