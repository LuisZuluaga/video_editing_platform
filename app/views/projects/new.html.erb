<h1>New Video Project</h1>

<%= form_with model: @project, local: true do |f| %>
  <div>
    <%= f.label :name, "Project Name" %><br>
    <%= f.text_field :name %>
  </div>

  <div style="margin-top: 10px;">
    <%= f.label :footage_url, "Link to Raw Footage" %><br>
    <%= f.text_field :footage_url %>
  </div>

  <h3 style="margin-top: 20px;">Select Video Types</h3>
  <div style="display: flex; flex-wrap: wrap; gap: 16px;">
    <% @video_types.each do |video| %>
      <div style="border: 1px solid #ccc; padding: 12px; width: 250px;">
        <h4><%= video.name %></h4>
        <p>Format: <%= video.format %></p><br>
        <p>Price: <strong>$<%= video.price %></strong></p>
        <label>
          <%= check_box_tag "project[video_ids][]", video.id, @selected_video_type_ids.include?(video.id.to_s) %>
          Add this video
        </label>
      </div>
    <% end %>
  </div>

  <div style="margin-top: 20px;">
    <%= f.submit "Go to Payment" %>
  </div>
<% end %>

