<div class="container">
  <h1>New Video Project</h1>

  <%= form_with model: @project, url: new_payment_path, method: :get, local: true do |f| %>
    <div>
      <%= f.label :title, "Project Name" %><br>
      <%= f.text_field :title %>
    </div>

    <div style="margin-top: 10px;">
      <%= f.label :raw_footage_url, "Link to Raw Footage" %><br>
      <%= f.text_field :raw_footage_url %>
    </div>

    <h3 style="margin-top: 20px;">Select Video Types</h3>
    <div style="display: flex; flex-wrap: wrap; gap: 16px;">
      <% @video_types.each do |video| %>
        <div style="border: 1px solid #ccc; padding: 12px; width: 250px;">
          <h4><%= video.name %></h4>
          <p>Format: <%= video.format %></p><br>
          <p>Price: <strong>$<%= video.price %></strong></p>
          <label>
            <%= check_box_tag "project[video_type_ids][]", video.id, @selected_video_type_ids&.include?(video.id.to_s) %> Add this video
          </label>
        </div>
      <% end %>
    </div>

    <div style="margin-top: 20px;">
      <%= f.submit "Continue to Payment" %>
    </div>
  <% end %>
</div>
