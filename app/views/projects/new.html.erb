<h1>Order a New Video Project</h1>

<%= form_with model: @project, local: true do |f| %>
  <div>
    <%= f.label :name, "Project Name" %><br>
    <%= f.text_field :name %>
  </div>

  <div style="margin-top: 10px;">
    <%= f.label :footage_url, "Link to Raw Footage" %><br>
    <%= f.text_field :footage_url %>
  </div>

  <h3 style="margin-top: 20px;">Select Video Types</h3>
  <div style="display: flex; flex-wrap: wrap; gap: 16px;">
    <% @videos.each do |video| %>
      <div style="border: 1px solid #ccc; padding: 12px; width: 250px;">
        <strong><%= video.format %></strong><br>
        <p><%= video.description %></p>
        <p><strong>Price:</strong> $<%= video.price %></p>
        <label>
          <%= check_box_tag "project[video_ids][]", video.id %> Add this video
        </label>
      </div>
    <% end %>
  </div>

  <!-- Payment Section (Simulated) -->
  <div style="margin-top: 30px;">
    <h3>Payment Information</h3>
    <p>This is a simulation. No real payment is processed.</p>

    <label>Card Number (simulated)</label><br>
    <input type="text" placeholder="1234 5678 9012 3456"><br>

    <p style="margin-top: 10px;">
      <strong>Total will be calculated on the server after submission.</strong>
    </p>
  </div>

  <div style="margin-top: 20px;">
    <%= f.submit "Pay and Submit Project" %>
  </div>
<% end %>
